---
layout: base.njk
translate: true
permalink: "/{{ lang }}/blog/{{ title | slugify }}.html"
---

<article class="article-post">
  <h1>
    {%- if not pagetitle -%}
      {{ title }}
    {%- else -%}
      {{ pagetitle }}
    {%- endif -%}
  </h1>
  <p class="post-date">{{ page.date | localizedDate(lang) }}</p>
  {%- if translate == true -%}
    {% for link in page.url | locale_links %}
      {%- if page.lang == "en" -%}
        <p class="translation-available">🇨🇿 Tenhle příspěvek je dostupný i
          <a href="{{ link.url }}" lang="{{ link.lang }}" hreflang="{{ link.lang }}">česky</a>. 🇨🇿</p>
      {%- elif page.lang == "cs" -%}
        <p class="translation-available">🇬🇧 This post is also available in
          <a href="{{ link.url }}" lang="{{ link.lang }}" hreflang="{{ link.lang }}">English</a>. 🇬🇧</p>
      {%- endif -%}
    {% endfor %}
  {%- endif -%}
  <div class="main-content">
    {{ content | safe }}
    {%- if page.lang == "en" -%}
      {%- if updateDate -%}
        <p class="date-changed">last modified
          {{ updateDate | localizedDate(lang) }}</p>
      {%- endif -%}
    {%- elif page.lang == "cs" -%}
      {%- if updateDate -%}
        <p class="date-changed">naposledy upraveno
          {{ updateDate | localizedDate(lang) }}</p>
      {%- endif -%}
    {%- endif -%}
  </div>


</article>

  {%- if page.lang == "en" -%}
        <p class="translation-available centered">Do you have anything to say about this article? Send me an <a href="mailto:{{meta.email}}?subject=Response to {{title}}">e-mail</a>!</p>
  {%- elif page.lang == "cs" -%}
        <p class="translation-available centered">Chceš mi k tomuhle článku něco říct? Pošli mi <a href="mailto:{{meta.email}}?subject=Reakce na {{title}}">e-mail</a>!</p>
  {%- endif -%}

